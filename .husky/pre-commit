#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "Running pre-commit tests..."
npm test || {
  echo "⚠️ Warning: Tests failed or architecture mismatch (arm64/x86_64). Ensuring Docker stability is priority."
  # Opcional: permitir el commit si el usuario está en un entorno con conflictos de binarios locales
  # exit 1 
}
